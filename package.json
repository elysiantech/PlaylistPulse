{
  "private": true,
  "name": "playlistpulse",
  "author": "elysiantech",
  "description": "Playlist DJ for Spotify",
  "version": "0.0.1",
  "main": "main/index.js",
  "scripts": {
    "dev": "tsc -p renderer && next dev renderer",
    "build": "next build renderer",
    "start": "next start renderer",
    "dev:desktop": "npm run build:desktop && electron .",
    "build:desktop": "npm run clean && npm run build:electron",
    "dist": "npm run build:desktop && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf dist renderer/.next main/*.js main/**/*.js",
    "build:main": "tsc -p main",
    "build:renderer": "next build renderer",
    "build:electron": "npm run build:renderer && npm run build:main",
    "lint": "next lint renderer"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.1.3",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-slot": "^1.0.2",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.7",
    "axios": "^1.2.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "electron-is-dev": "^3.0.1",
    "electron-serve": "^1.3.0",
    "electron-store": "^8.2.0",
    "electron-updater": "^5.3.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.395.0",
    "mammoth": "^1.5.1",
    "next": "^14.2.4",
    "next-themes": "^0.3.0",
    "node-html-markdown": "^1.3.0",
    "node-id3": "^0.2.6",
    "nodemailer": "^6.9.1",
    "nextron": "^9.0.0",
    "postcss": "^8.4.38",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sonner": "^1.7.1",
    "spotify-web-api-node": "^5.0.2",
    "tailwindcss": "^3.4.4",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "youtube-dl-exec": "^3.0.12",
    "youtube-sr": "^4.3.11"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.191",
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.52",
    "@types/react-dom": "18.0.10",
    "autoprefixer": "^10.4.19",
    "daisyui": "^3.5.1",
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "8.32.0",
    "eslint-config-next": "13.1.2",
    "typescript": "^5.4.5"
  },
  "build": {
    "appId": "com.elysiantech.playlistpulse",
    "productName": "PlaylistPulse",
    "files": [
      "main/*.js",
      "renderer"
    ],
    "icon": "resources/icon.icns",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "tar.gz",
        "zip"
      ]
    }
  }
}
